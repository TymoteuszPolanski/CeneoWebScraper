{% extends "base.html.jinja" %}

{% block content %}
        <h2>Pobierz opinie o produkcie</h2>
        {% if error %}
            <div class="alert alert-dangare alert-dismissible fade show" role="alert">
                 <i class="bi bi-heartbreak-fill"></i> <strong>{{error}}</strong>
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                 </button>
            </div>
        {% endif %}
        <form action="{{url_for('extract')}}" method="POST">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                <label for="product_id" class="col-form-label">Kod produktu</label>
                </div>
                <div class="col-auto">
                <input type="text" name="product_id" id="product_id" class="form-control" aria-describedby="passwordHelpInline">
                </div>
                <div class="col-auto">
                <input type="submit" class="btn btn-pink" value="Pobierz">
                </div>
            </div>
        </form>
{% endblock content %}